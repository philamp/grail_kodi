<addon id="context.kodi_grail"
       name="Kodi Grail Context Menu"
       version="20260131"
       provider-name="philamp">

  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>

  <!-- ton menu contextuel -->
  <extension point="kodi.context.item">
    <menu id="kodi.core.main">
      <item library="resources/lib/contextitem.py" condition="true">
        <label>}{ JellyGrail Menu</label>
        <visible>true</visible>
      </item>
    </menu>
  </extension>

  <!-- le service qui force Kodi Ã  initialiser le gestionnaire -->
  <extension point="xbmc.service" library="init_context.py" start="startup" />

  <extension point="xbmc.addon.metadata">
    <summary>JellyGrail Add-on</summary>
    <description>Add-on for using special JellyGrail features.</description>
    <platform>all</platform>
  </extension>
</addon>
